<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/statistics_background_color"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="52dip"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:text="收费项目" android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="15sp"
                android:textColor="@color/black" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/servernum"
            android:clipChildren="false">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/red_background_with_radius"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_xsmall" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_16" />
        <TextView
            android:id="@+id/allcount0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="3"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_16" />
            <TextView
                android:id="@+id/allcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textColor="@color/red"
                android:textSize="@dimen/dp_16" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="自付费用"
                android:textColor="#191616"
                android:textSize="15sp" />
        </LinearLayout>



        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="共3项服务"
            android:textColor="#191616"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sure_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorTheme"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:background="@color/colorTheme"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="15sp"
            />
    </LinearLayout>
</LinearLayout>
