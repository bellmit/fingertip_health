<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"

    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/replyline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:background="#e8e8e8"
        android:gravity="center"
        android:id="@+id/replyTime"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <LinearLayout
        android:id="@+id/title_reply"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_yuan"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView

            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="转办信息"
            android:textColor="@color/list_item_main_text_color"
            android:textSize="@dimen/txt_size_16"
            android:textStyle="bold" />
        <LinearLayout
            android:gravity="right"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="15dp"

                android:id="@+id/ll_remove"
                android:gravity="center"
                android:background="@drawable/shape_cornerall"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/primary_color"
                    android:text="撤销"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <View
        android:background="@color/separator_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_marginBottom="10dp"

        android:id="@+id/ll_reply"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_danwei"
                android:text="转办单位："
                android:textSize="@dimen/txt_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/replyUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_content"
                android:text="回复内容："
                android:textSize="@dimen/txt_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/replycontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/consultline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:gravity="bottom|center"
        android:id="@+id/consult_replyTime"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <LinearLayout
        android:id="@+id/consult_title_reply"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_yuan"
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView

            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/consult_tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="追问信息"
            android:textColor="@color/list_item_main_text_color"
            android:textSize="@dimen/txt_size_16"
            android:textStyle="bold" />
        <LinearLayout
            android:gravity="right"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/consult_ll_remove"
                android:gravity="center"
                android:background="@drawable/shape_cornerall"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/primary_color"
                    android:text="撤销"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <View
        android:background="@color/separator_color"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/consult_ll_reply"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="追问单位："
                android:textSize="@dimen/txt_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/consult_replyUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="追问内容："
                android:textSize="@dimen/txt_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/consult_replycontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>