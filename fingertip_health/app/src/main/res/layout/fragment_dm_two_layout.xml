                android:layout_marginLeft="6.5dp"
                android:layout_marginRight="6.5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/hb_text_size" />

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="运动:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/hb_text_size" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/edit_port1"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:hint="当前运动周次"
                                android:imeOptions="actionDone"
                                android:paddingTop="4dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="/"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                            <EditText
                                android:id="@+id/edit_sport2"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:hint="目标运动周次"
                                android:imeOptions="actionDone"
                                android:paddingTop="4dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="次/周"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                            <EditText
                                android:id="@+id/edit_minute1"

                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:hint="当前运动分次"
                                android:imeOptions="actionDone"
                                android:paddingTop="4dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="/"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                            <EditText
                                android:id="@+id/edit_minute2"
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center"
                                android:paddingBottom="4dp"
                                android:hint="目标运动分次"
                                android:imeOptions="actionDone"
                                android:paddingTop="4dp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                            <TextView
                                android:layout_marginLeft="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="次/分"
                                android:textColor="@color/black"
                                android:textSize="@dimen/hb_text_size" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm_line_height"
                    android:layout_marginLeft="6.5dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_gray_background"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/hb_text_size" />

                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="主食(克/天):"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />

                    <EditText
                        android:inputType="numberDecimal"
                        android:layout_gravity="center"
                        android:id="@+id/id_staple"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:hint="当前主食量"
                        android:imeOptions="actionDone"
                        android:paddingTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="/"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <EditText
                        android:inputType="numberDecimal"

                        android:layout_gravity="center"
                        android:id="@+id/id_stapleAim"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:hint="目标主食量"
                        android:imeOptions="actionDone"
                        android:paddingTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="6.5dp"
                android:layout_marginLeft="6.5dp"
                android:background="@drawable/gray_border_gray_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm_line_height"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="心理调整:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />

                    <com.jqsoft.fingertip_health.optionlayout.NecessityNameOptionsNewLayout
                        android:layout_weight="1"
                        android:id="@+id/psyadjust"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:is_compulsory="false"
                        app:is_name_visible="false"
                        app:is_single_select="true"
                        app:name_text="信息类别">

                    </com.jqsoft.fingertip_health.optionlayout.NecessityNameOptionsNewLayout>

                    >
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="6.5dp"
                android:layout_marginLeft="6.5dp"
                android:background="@drawable/gray_border_gray_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm_line_height"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="遵医行为:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />

                    <com.jqsoft.fingertip_health.optionlayout.NecessityNameOptionsNewLayout
                        android:layout_weight="1"
                        android:id="@+id/behavior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:is_compulsory="false"
                        app:is_name_visible="false"
                        app:is_single_select="true"
                        app:name_text="信息类别">

                    </com.jqsoft.fingertip_health.optionlayout.NecessityNameOptionsNewLayout>


                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp6"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp6"
                android:background="@drawable/shape_corner_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_top_height">
                <LinearLayout
                    android:id="@+id/hbline1"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/HblineBlue_500"
                    android:layout_width="2.5dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>
                <TextView
                    android:layout_toRightOf="@+id/hbline1"
                    android:layout_centerVertical="true"
                    android:textColor="@color/HblineBlue_500"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:text="辅助检查"
                    android:textSize="@dimen/hb_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm_line_height"
                    android:layout_marginLeft="6.5dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_gray_background"
                    android:orientation="horizontal">
                    <TextView
                        android:visibility="invisible"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="空腹血糖值:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />


                    <EditText
                        android:inputType="numberDecimal"

                        android:layout_gravity="center"
                        android:id="@+id/fpg"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="right"
                        android:paddingBottom="4dp"
                        android:hint="请输入空腹血糖值"
                        android:imeOptions="actionDone"
                        android:paddingTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm_line_height"
                    android:layout_marginLeft="6.5dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_gray_background"
                    android:orientation="horizontal">
                    <TextView
                        android:visibility="invisible"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_gravity="center"
                        android:inputType="numberDecimal"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="随机血糖值:"
