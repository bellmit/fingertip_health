<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <ScrollView

        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <View
                android:id="@+id/topview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp6"
                android:layout_marginRight="@dimen/dp6"
                android:layout_marginLeft="@dimen/dp6"
                android:background="@drawable/shape_corner_new"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_top_height">
                <LinearLayout
                    android:id="@+id/hbline4"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@color/HblineBlue_500"
                    android:layout_width="2.5dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>
                <TextView
                    android:layout_toRightOf="@+id/hbline4"
                    android:layout_centerVertical="true"
                    android:textColor="@color/HblineBlue_500"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:text="生活指导方式"
                    android:textSize="@dimen/hb_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm_line_height"
                    android:layout_marginLeft="6.5dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_gray_background"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/hb_text_size" />

                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="日吸烟量:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />

                    <EditText
                        android:layout_gravity="center"

                        android:id="@+id/edit_moke1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:hint="当前吸烟量"
                        android:imeOptions="actionDone"
                        android:paddingTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="/"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <EditText
                        android:layout_gravity="center"

                        android:id="@+id/edit_smoke2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:hint="目标吸烟量"
                        android:imeOptions="actionDone"
                        android:paddingTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="支"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dm_line_height"
                    android:layout_marginLeft="6.5dp"
                    android:layout_marginRight="6.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_border_gray_background"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_gravity="center"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="@dimen/hb_text_size" />

                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="日饮酒量:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />

                    <EditText
                        android:layout_gravity="center"

                        android:id="@+id/edit_drink1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:hint="当前饮酒量"
                        android:imeOptions="actionDone"
                        android:paddingTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="/"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <EditText
                        android:layout_gravity="center"

                        android:id="@+id/edit_drink2"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingBottom="4dp"
                        android:hint="目标饮酒量"
                        android:imeOptions="actionDone"
                        android:paddingTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                    <TextView
                        android:layout_gravity="center"

                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="两"
                        android:textColor="@color/black"
                        android:textSize="@dimen/hb_text_size" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
