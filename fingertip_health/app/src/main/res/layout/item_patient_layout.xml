<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_6"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邓从品"
                android:textAppearance="@style/Text.Context" />

            <TextView
                android:id="@+id/tv_person_gender"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:text="男"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_person_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="66"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_person_birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1951-11-13)"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_person_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="正常"
                android:textColor="@color/colorTheme"
                android:textSize="@dimen/txt_size_14" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="522225"
                android:visibility="gone"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_card2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="19511113"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="3215"
                android:visibility="gone"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_person_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="本人或户主"
                android:textColor="@color/subtitle_color"
                android:textSize="@dimen/txt_size_14" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_person_attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="精准扶贫建档立卡人员"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_size_14" />

            <TextView
                android:id="@+id/tv_individual_accumulated_compensate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="￥149.61"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_size_14" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:paddingLeft="@dimen/dp_2"
        android:paddingRight="@dimen/dp_2"
        android:background="@drawable/white_background_with_color_theme_border_with_round_corner"
        android:text="选择"
        android:textColor="@color/colorTheme"
        android:textSize="@dimen/txt_size_15" />

</LinearLayout>