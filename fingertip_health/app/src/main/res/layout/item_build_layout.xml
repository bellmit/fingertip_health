<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_necessity"
            android:layout_width="@dimen/img_width_necessity"
            android:layout_height="@dimen/img_height_necessity"
            android:scaleType="fitXY"
            android:src="@mipmap/i_star_outline"
            android:visibility="gone" />


        <!--android:minWidth="@dimen/necessity_name_input_min_width"-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text=""
            android:textColor="@color/archive_title_color"
            android:textSize="@dimen/txt_size_archive"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/fl_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </org.apmem.tools.layouts.FlowLayout>
            <EditText
                android:hint=""
                android:imeOptions="actionDone"
                android:textSize="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/et_input"
                android:visibility="gone"
                android:background="@drawable/gray_border_gray_background"
                android:layout_width="35dp"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>